<body class="w3-light-grey">

<!-- Header -->

<header class="w3-content bgImgHeader" style="max-width:1500px;height:700px;">

  <div class="w3-round-xxlarge w3-white w3-padding w3-col l6 m8 s11 w3-margin">
    <div class="w3-container">  
      <center><h3 class="w3-cell-bottom"><img src="/static/images/bybMapWB.png" style="width:100px;height:100px;"> Bybrisk Maps</h3></center>
    </div>
    <div class="w3-container w3-padding-16" id="signupComponent">
      <span id="signupErrorMessage" class="w3-text-red"></span>
      <form action="#" method="POST" id="createAccountForm" target="_blank" onSubmit="callCreateAccountAPI()" autocomplete="off">
        <div class="w3-row-padding" style="margin:0 -16px;">
          <div class="w3-rest w3-margin-bottom">
            <label><i class="fa fa-child"></i> UserName</label>
            <input class="w3-input w3-border" type="text" placeholder="@username" name="username" id="username" required>
          </div>
        </div>
        <div class="w3-row-padding" style="margin:8px -16px;">
          <div class="w3-rest w3-margin-bottom">
            <label><i class="fa fa-lock"></i> Password</label>
            <input class="w3-input w3-border" type="password" name="password" id="password" onInput="passwordValidation()" required>
            <span id="passwordSuggestions" class="w3-text-red"></span>
          </div>
        </div>
        <div class="w3-row-padding" style="margin:8px -16px;">
          <div class="w3-rest w3-margin-bottom">
            <label><i class="fa fa-building"></i> Business Name</label>
            <input class="w3-input w3-border" type="text" name="businessName" id="businessName" placeholder="Enter Business Name" required>
          </div>
        </div>
        <div class="w3-row-padding" style="margin:8px -16px;">
          <div class="w3-rest w3-margin-bottom">
            <label><i class="fas fa-map-signs"></i> City</label>
            <select class="w3-select" id="citySelect" name="citySelect">
              <option value="" disabled selected>Choose Your City</option>
              <option value="Bhopal">Bhopal</option>
              <option value="Indore">Indore</option>
              <option value="Pune">Pune</option>
            </select>
         </div>
        </div>  
        <center><button class="w3-button w3-dark-grey" type="submit"> SignUp </button><br>
        <h5>or <b class="w3-text-blue" onclick="loginComponent()" style="cursor:pointer">Login</b></h5></center>
      </form>
    </div>


   <!-------------------login code below---------->
    <div class="w3-container w3-padding-16" id="loginComponent" style="display:none;">
      <form action="#" method="POST" id="loginAccountForm" target="_blank" onSubmit="callLoginAccountAPI()" autocomplete="off">
        <div class="w3-row-padding" style="margin:0 -16px;">
          <div class="w3-rest w3-margin-bottom">
            <label><i class="fa fa-child"></i> UserName</label>
            <input class="w3-input w3-border" type="text" placeholder="@username" name="username" id="usernameLogin" required>
          </div>
        </div>
        <div class="w3-row-padding" style="margin:8px -16px;">
          <div class="w3-rest w3-margin-bottom">
            <label><i class="fa fa-lock"></i> Password</label>
            <input class="w3-input w3-border" type="password" name="password" id="passwordLogin" required>
          </div>
        </div>  
        <center><button class="w3-button w3-dark-grey" type="submit"> Login </button><br>
        <h5>or <b class="w3-text-blue" onclick="signupComponent()" style="cursor:pointer">SignUp</b></h5></center>
      </form>
    </div>

  </div>

</header>

<!-- Page content -->
<div class="w3-content" style="max-width:1532px;">

